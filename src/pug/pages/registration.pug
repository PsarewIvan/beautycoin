extends ../layout.pug

block variables
    - var page = 'popup'

block content
    include ../components/text-input.pug
    include ../components/pass-input.pug
    include ../components/checkbox.pug
    include ../components/button.pug

    main.main-popup
        .main-popup__wrapper
            section.main-popup__content
                a.main-popup__logo(href="/")
                    img.main-popup__logo-img(src="img/logo-black.png")
                h1.main-popup__title Программа лояльности среди поставщиков для салонов красоты
            section.main-popup__popup.popup
                a.popup__logo(href="/")
                    img.popup__logo-img(src="img/logo.png")
                .popup__titles
                    h2.popup__title Новый пользователь
                    p.popup__sub-title Уже есть личный кабинет? 
                        a.popup__link(href='login.html') Войдите
                .popup__inputs
                    +text-input({placeholder: 'Ваш номер телефона', className: 'popup__input'})
                    +pass-input({placeholder: 'Пароль', className: 'popup__input'})
                +checkbox({reg: true})
                img.popup__captcha(src='img/captcha.png')
                div
                    +button({text: 'Войти', className: 'popup__apply-button'})