    include ../components/card.pug
    include ../components/card-low.pug
    include ../icons/icon-plus.pug
    include ../icons/icon-minus.pug

    main.main
        section.promo
            h1.title1 Программа лояльности среди поставщиков для салонов красоты
        section.section.section_start(id='spend')
            h2.title2 Где потратить?
            .slider.splide
                .splide__track
                    ul.card-list.splide__list
                        +card({text: 'Программа для салона красоты с онлайн-записью', title: 'SONLINE', img: 'img/img-sonline.jpg', icon: 'img/icon-sonline.png', className: 'splide__slide'})
                        +card({text: 'сервис отправки сообщений в WhatsApp', title: 'Wazapa', img: 'img/img-wazapa.jpg', icon: 'img/icon-wazapa.png', className: 'splide__slide'})
                        +card({text: 'Ежемесячная статистика рынка салонов красоты', title: 'Trendista Global', img: 'img/img-trendista.jpg', icon: 'img/icon-trendista.png', className: 'splide__slide'})
                        +card({text: 'Услуги салона красоты по ваше цене', title: 'YokYok', img: 'img/img-yok.jpg', icon: 'img/icon-yok.png', className: 'splide__slide'})
