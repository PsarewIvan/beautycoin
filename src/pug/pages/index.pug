                        +card({text: 'Оборудование и ПО для автоматизации торговли', title: 'АТОЛ', img: 'img/img-atol.jpg', icon: 'img/icon-atol.png', className: 'splide__slide'})
                        +card({text: 'Эффективная реклама в интернет', title: 'Яндекс Директ', img: 'img/img-ya.jpg', icon: 'img/icon-ya.png', className: 'splide__slide'})
                        +card({text: 'Полный спектр банковских услуг', title: 'Альфа-банк', img: 'img/img-alfa.jpg', icon: 'img/icon-alfa.png', className: 'splide__slide'})
                        +card({text: 'Сервис электронных чаевых', title: 'НЕТМОНЕТ', img: 'img/img-hm.jpg', icon: 'img/icon-hm.png', className: 'splide__slide'})
